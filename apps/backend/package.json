{
	"name": "@fastybird/smart-panel-backend",
	"version": "1.0.0-dev.1",
	"description": "Powerful backend for administrating and integrating the FastyBird IoT Smart Panel",
	"keywords": [
		"fastybird",
		"iot",
		"smart-panel",
		"backend",
		"administration",
		"iot-platform",
		"device-management",
		"home-automation",
		"api",
		"websockets",
		"iot-backend",
		"automation",
		"smart-home",
		"fastybird-platform",
		"smart-devices",
		"connected-devices",
		"integration"
	],
	"homepage": "https://smart-panel.fastybird.com",
	"bugs": "https://github.com/FastyBird/smart-panel/issues",
	"license": "Apache-2.0",
	"author": {
		"name": "FastyBird s.r.o.",
		"email": "code@fastybird.com",
		"url": "https://www.fastybird.com/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/FastyBird/smart-panel.git"
	},
	"main": "dist/main.js",
	"files": [
		"dist/",
		"static/",
		"package.json",
		"README.md",
		"LICENSE.md"
	],
	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint:js": "eslint \"{src,apps,libs,test}/**/*.ts\"",
		"lint:js:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"lint:api": "bash ../../bin/lint-api-conventions.sh",
		"lint:openapi": "spectral lint ../../spec/api/v1/openapi.json --fail-severity warn",
		"lint:deps": "npx madge --circular src --extensions ts,tsx --ts-config tsconfig.json",
		"pretty": "pnpm pretty:write && pnpm pretty:check",
		"pretty:check": "prettier \"src/**/*.ts\" \"test/**/*.ts\" --check",
		"pretty:write": "prettier \"src/**/*.ts\" \"test/**/*.ts\" --write",
		"test:unit": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"type-check": "tsc --noEmit",
		"typeorm:migration:generate": "ts-node-esm --project tsconfig.json --transpile-only ./node_modules/typeorm/cli.js migration:generate -d ./src/dataSource.ts",
		"typeorm:migration:run": "ts-node-esm --project tsconfig.json --transpile-only ./node_modules/typeorm/cli.js migration:run -d ./src/dataSource.ts",
		"typeorm:migration:revert": "ts-node-esm --project tsconfig.json --transpile-only ./node_modules/typeorm/cli.js migration:revert -d ./src/dataSource.ts",
		"typeorm:migration:run:prod": "node ./node_modules/typeorm/cli.js migration:run -d ./dist/dataSource.js",
		"generate:openapi": "ts-node --project tsconfig.json src/scripts/generate-openapi-spec.ts",
		"generate:spec": "ts-node ./tools/build_devices_spec.ts && ts-node ./tools/build_channel_spec.ts",
		"cli": "nestjs-command",
		"cli:prod": "node dist/cli"
	},
	"dependencies": {
		"@fastify/static": "^8.2.0",
		"@fastybird/smart-panel-extension-example": "workspace:*",
		"@fastybird/smart-panel-extension-sdk": "workspace:*",
		"@nestjs/cache-manager": "^3.0.1",
		"@nestjs/common": "^11.1.3",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.3",
		"@nestjs/event-emitter": "^3.0.1",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/mapped-types": "^2.1.0",
		"@nestjs/platform-express": "^11.1.3",
		"@nestjs/platform-fastify": "^11.1.3",
		"@nestjs/platform-socket.io": "^11.1.3",
		"@nestjs/schedule": "^5.0.1",
		"@nestjs/serve-static": "^5.0.3",
		"@nestjs/swagger": "^11.2.3",
		"@nestjs/typeorm": "^11.0.0",
		"@nestjs/websockets": "^11.1.3",
		"bcrypt": "^6.0.0",
		"cache-manager": "^6.4.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"cron": "^3.5.0",
		"dotenv": "^16.5.0",
		"fastify": "^5.3.3",
		"influx": "^5.10.0",
		"inquirer": "^12.6.3",
		"lodash.isundefined": "^3.0.1",
		"lodash.omitby": "^4.6.0",
		"mime-types": "^3.0.1",
		"nestjs-cls": "^6.1.0",
		"nestjs-command": "^3.1.5",
		"node-fetch": "^2.7.0",
		"openweathermap-ts": "^1.2.10",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"shellies": "^1.7.0",
		"shellies-ds9": "github:fastybird/node-shellies-ds9#main",
		"socket.io": "^4.8.1",
		"sqlite3": "^5.1.7",
		"systeminformation": "^5.27.1",
		"typeorm": "^0.3.24",
		"ulid": "^3.0.1",
		"uuid": "^11.1.0",
		"ws": "^8.18.2",
		"yaml": "^2.8.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.28.0",
		"@nestjs/cli": "^11.0.7",
		"@nestjs/schematics": "^11.0.5",
		"@nestjs/testing": "^11.1.3",
		"@stoplight/spectral-cli": "^6.15.0",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.11.31",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.3",
		"@types/jest": "^29.5.14",
		"@types/lodash.isundefined": "^3.0.9",
		"@types/lodash.omitby": "^4.6.9",
		"@types/md5": "^2.3.5",
		"@types/mime-types": "^3.0.1",
		"@types/node": "^22.15.30",
		"@types/node-fetch": "^2.6.12",
		"@types/supertest": "^6.0.3",
		"@types/uuid": "^10.0.0",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/parser": "latest",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.1",
		"globals": "^15.15.0",
		"jest": "^29.7.0",
		"openapi-typescript": "^7.8.0",
		"prettier": "^3.5.3",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.1",
		"ts-jest": "^29.3.4",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1"
	},
	"engines": {
		"node": ">=20",
		"npm": ">=10"
	}
}
