{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "modules/spaces/spec/definitions/**/*.yaml",
        "outDir": "dist"
      },
      {
        "include": "modules/security/spec/definitions/**/*.yaml",
        "outDir": "dist"
      },
      {
        "include": "plugins/devices-zigbee2mqtt/mappings/schema/**/*.json",
        "outDir": "dist"
      },
      {
        "include": "plugins/devices-zigbee2mqtt/mappings/definitions/**/*.yaml",
        "outDir": "dist"
      },
      {
        "include": "plugins/devices-home-assistant/mappings/schema/**/*.json",
        "outDir": "dist"
      },
      {
        "include": "plugins/devices-home-assistant/mappings/definitions/**/*.yaml",
        "outDir": "dist"
      },
      {
        "include": "plugins/devices-shelly-ng/mappings/schema/**/*.json",
        "outDir": "dist"
      },
      {
        "include": "plugins/devices-shelly-ng/mappings/definitions/**/*.yaml",
        "outDir": "dist"
      },
      {
        "include": "plugins/devices-simulator/scenarios/schema/**/*.json",
        "outDir": "dist"
      },
      {
        "include": "plugins/devices-simulator/scenarios/definitions/**/*.yaml",
        "outDir": "dist"
      }
    ]
  }
}
