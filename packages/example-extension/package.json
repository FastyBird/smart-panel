{
  "name": "@fastybird/smart-panel-extension-example",
  "version": "0.1.0",
  "type": "module",
  "description": "Example Smart Panel extension for demonstration & testing.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json && vite build",
    "clean": "rimraf dist && rimraf admin",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "fastybird": {
    "smartPanelBackend": {
      "kind": "plugin",
      "routePrefix": "example-extension",
      "extensionExport": "ExampleExtensionModule",
      "sdkVersion": "^1.0.0",
      "displayName": "Example Extension",
      "description": "Shows how to build a minimal extension for Smart Panel."
    },
    "smartPanelAdmin": {
      "kind": "plugin",
      "extensionEntry": "admin/index.js",
      "displayName": "Example Admin",
      "description": "Tiny demo admin plugin"
    }
  },
  "peerDependencies": {
    "@fastybird/smart-panel-backend": "^1.0.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/swagger": "^11.2.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "vue": "^3.5"
  },
  "devDependencies": {
    "@fastybird/smart-panel-backend": "workspace:*",
    "@vitejs/plugin-vue": "^5.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "rimraf": "^6.0",
    "vite": "^6.3.6",
    "vue-tsc": "^2.2"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  }
}
