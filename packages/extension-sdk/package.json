{
  "name": "@fastybird/smart-panel-extension-sdk",
  "version": "1.0.0-dev.1",
  "type": "commonjs",
  "description": "SDK types and helpers for Smart Panel extensions (modules & plugins).",
  "homepage": "https://smart-panel.fastybird.com",
  "bugs": "https://github.com/FastyBird/smart-panel/issues",
  "license": "Apache-2.0",
  "author": {
    "name": "FastyBird s.r.o.",
    "email": "code@fastybird.com",
    "url": "https://www.fastybird.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FastyBird/smart-panel.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint:js": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:js:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretty": "pnpm pretty:write && pnpm pretty:check",
    "pretty:check": "prettier \"src/**/*.ts\" \"test/**/*.ts\" --check",
    "pretty:write": "prettier \"src/**/*.ts\" \"test/**/*.ts\" --write",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.1.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  }
}
